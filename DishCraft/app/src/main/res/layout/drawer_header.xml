<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_gray"
    android:paddingStart="22dp">

    <TextView
        android:id="@+id/menuAppNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fira_sans_extra_condensed_bold"
        android:text="@string/app_name"
        android:textColor="@color/beige"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/menuAuthorBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuAppNameTV"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/menuAuthorPhotoShapeableImageView"
            android:layout_width="@dimen/user_photo_size"
            android:layout_height="@dimen/user_photo_size"
            android:scaleType="fitXY"
            android:src="@drawable/image_example"
            app:shapeAppearanceOverlay="@style/RoundShape" />

        <TextView
            android:id="@+id/menuAuthorNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/fira_sans_extra_condensed_medium"
            android:text="Галина Белая"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/createRecipeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuAuthorBlock"
        android:layout_marginTop="20dp"
        android:background="@drawable/active_login_button_bg"
        android:text="@string/create_recipe"
        android:fontFamily="@font/fira_sans_extra_condensed_regular"
        android:textSize="18sp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minHeight="0dp"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>