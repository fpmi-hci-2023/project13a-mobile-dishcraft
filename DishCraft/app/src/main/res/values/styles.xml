<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchViewStyle" parent="">
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:editTextColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/fira_sans_extra_condensed_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChipTextAppearance">
        <item name="android:fontFamily">@font/fira_sans_extra_condensed_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChipSuggestion" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/filter_chip_bg</item>
        <item name="chipStrokeColor">@color/filter_chip_stroke_color</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="rippleColor">@color/brown_transparent</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style name="ChipInput" parent="Widget.Material3.Chip.Input">
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/beige</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="ButtonGreenBorder" parent="Widget.Material3.Button">
        <item name="background">@drawable/login_input_background</item>
    </style>

    <style name="TranslucentStatusBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    
    <style name="RoundShape" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundButton" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:background">@drawable/circle_with_brown_stroke</item>
    </style>

    <style name="PortionRoundButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="background">@drawable/circle_with_brown_stroke</item>
        <item name="rippleColor">@color/white</item>
    </style>


    <style name="MenuText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/fira_sans_extra_condensed_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <!--<style name="ToggleButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/switch_btn_bg</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>-->

    <style name="ToggleButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/switch_bg</item>
        <item name="android:textColor">@color/switch_text</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="FilledButton" parent="Widget.Material3.Button" >
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:fontFamily">@font/fira_sans_extra_condensed_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/brown_dark</item>
        <item name="colorAccent">@color/brown</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="OutlinedButton" parent="FilledButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/green</item>
    </style>

</resources>